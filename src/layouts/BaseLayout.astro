---
const { title = "Founded in Feb 2026", description = "A personal blog" } = Astro.props;
const base = '/foundedinfeb26/';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=EB+Garamond:ital,wght@0,400;0,500;0,600;1,400;1,500&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet" />
  </head>
  <body>
    <div class="page-texture"></div>
    <nav class="site-nav">
 <a href={base} class="nav-title">Founded in Feb 2026</a>
<div class="nav-links">
  <a href={base}>Home</a>
  <a href={`${base}blog`}>Writing</a>
  <a href={`${base}about`}>About</a>
</div>
      </div>
    </nav>
    <main>
      <slot />
    </main>
    <footer>
      <div class="footer-ornament">&#10053;</div>
      <p>&copy; 2026 Christian McKenna</p>
    </footer>
  </body>
</html>

<style is:global>
  *, *::before, *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --paper: #f4efe6;
    --paper-dark: #e8e0d0;
    --ink: #2c2418;
    --ink-light: #5c4f3d;
    --ink-faint: #8a7e6b;
    --accent: #8b4513;
    --accent-hover: #a0522d;
    --chapter-rule: #c4b69c;
    --max-width: 42rem;
  }

  html {
    font-size: 19px;
    scroll-behavior: smooth;
  }

  body {
    font-family: 'EB Garamond', 'Georgia', serif;
    background-color: var(--paper);
    color: var(--ink);
    line-height: 1.75;
    min-height: 100vh;
    position: relative;
    -webkit-font-smoothing: antialiased;
  }

  .page-texture {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 0;
    opacity: 0.3;
    background-image: 
      radial-gradient(ellipse at 20% 50%, rgba(139, 69, 19, 0.03) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 20%, rgba(101, 67, 33, 0.04) 0%, transparent 50%),
      radial-gradient(ellipse at 50% 80%, rgba(160, 82, 45, 0.02) 0%, transparent 50%);
  }

  .site-nav {
    position: relative;
    z-index: 10;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2.5rem 1.5rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    border-bottom: 1px solid var(--chapter-rule);
  }

  .nav-title {
    font-family: 'Cormorant Garamond', 'Georgia', serif;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--ink);
    text-decoration: none;
    letter-spacing: 0.02em;
    transition: color 0.3s ease;
  }

  .nav-title:hover { color: var(--accent); }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    font-family: 'Cormorant Garamond', 'Georgia', serif;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--ink-light);
    text-decoration: none;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    transition: color 0.3s ease;
  }

  .nav-links a:hover { color: var(--accent); }

  main {
    position: relative;
    z-index: 1;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 3rem 1.5rem;
    animation: fadeIn 0.8s ease-out;
  }

  h1, h2, h3, h4 {
    font-family: 'Cormorant Garamond', 'Georgia', serif;
    color: var(--ink);
    line-height: 1.3;
  }

  h1 { font-size: 2.6rem; font-weight: 500; margin-bottom: 0.5rem; }
  h2 { font-size: 1.8rem; font-weight: 500; margin-top: 2.5rem; margin-bottom: 1rem; }
  h3 { font-size: 1.3rem; font-weight: 600; margin-top: 2rem; margin-bottom: 0.75rem; }

  p {
    margin-bottom: 1.25rem;
    text-indent: 1.5em;
  }

  p:first-of-type { text-indent: 0; }

  a {
    color: var(--accent);
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
    transition: color 0.3s ease;
  }

  a:hover { color: var(--accent-hover); }

  blockquote {
    margin: 2rem 0;
    padding: 0.5rem 0 0.5rem 2rem;
    border-left: 2px solid var(--chapter-rule);
    font-style: italic;
    color: var(--ink-light);
  }

  .drop-cap::first-letter {
    font-family: 'Cormorant Garamond', 'Georgia', serif;
    float: left;
    font-size: 4.5rem;
    line-height: 0.8;
    padding-right: 0.15em;
    padding-top: 0.1em;
    font-weight: 600;
    color: var(--accent);
  }

  .divider {
    text-align: center;
    margin: 3rem 0;
    color: var(--chapter-rule);
    font-size: 1.2rem;
    letter-spacing: 0.5em;
  }

  .divider::before { content: "· · ·"; }

  footer {
    position: relative;
    z-index: 1;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2rem 1.5rem 3rem;
    text-align: center;
    border-top: 1px solid var(--chapter-rule);
  }

  .footer-ornament {
    color: var(--chapter-rule);
    font-size: 1.2rem;
    margin-bottom: 0.75rem;
  }

  footer p {
    font-family: 'Cormorant Garamond', 'Georgia', serif;
    font-size: 0.85rem;
    color: var(--ink-faint);
    text-indent: 0;
    letter-spacing: 0.05em;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(8px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media (max-width: 600px) {
    html { font-size: 17px; }
    .site-nav {
      flex-direction: column;
      align-items: center;
      gap: 0.75rem;
      padding-top: 1.5rem;
    }
    .nav-links { gap: 1.5rem; }
    h1 { font-size: 2rem; }
    main { padding: 2rem 1.25rem; }
  }
</style>