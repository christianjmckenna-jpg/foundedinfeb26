    padding: 2rem 0;
  }

  .post-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .post-date {
    font-family: 'Cormorant Garamond', 'Georgia', serif;
    font-size: 0.85rem;
    color: var(--ink-faint);
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .post-header h1 {
    font-weight: 400;
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  .post-body {
    margin: 1rem 0;
  }

  .post-footer {
    margin-top: 2rem;
    text-align: center;
  }

