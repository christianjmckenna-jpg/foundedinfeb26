    font-family: 'Cormorant Garamond', 'Georgia', serif;
    font-size: 1rem;
    color: var(--accent);
    text-decoration: none;
    letter-spacing: 0.03em;
    transition: color 0.3s ease;
  }

  .post-footer a:hover {
    color: var(--accent-hover);
  }
</style>